@import nib
global-reset()

bgcolor = #262720
color1 = #3B3B00
color2 = #8EA972
color3 = #ACA39E
color4 = #8B857F
color5 = #4C5B46


body
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  background bgcolor
  color #fff

.unstyled-list
  margin-left 0
  list-style none
  -webkit-margin-before 0
  -webkit-margin-after 0
  -webkit-padding-start 0

.users
  width 100%
  overflow hidden
  @extend .unstyled-list

.users__user, .users__add-user, .register
  line-height 90px
  text-align center
  text-transform uppercase
  background-size contain
  font-weight bold
  color white
  user-select none
  font-size 48px
  letter-spacing 1px
  padding 3% 0 
  &:nth-child(3n+1)
    background: color1
  &:nth-child(3n+2)
    background: color2
  &:nth-child(3n+3)
    background: color3
  &:nth-child(3n+4)
    background: color4
  transition all 300ms ease-in-out

.users__user:active
  transform scale3d(0.9, 0.9, 1)

.users__add-user, .register
  position: relative
  input[type='submit']
    display: none
  #friend-username, #register-username
    width 100%
    display block
    line-height 90px
    font-size 48px
    letter-spacing 1px
    width 100%
    border 0
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif
    font-weight bold
    text-align center
    color #fff
    background none
    transition all 300ms ease-in-out
    &::-webkit-input-placeholder
      color #fff


@media (max-width: 600px)
  .users__user, .users__add-user, .register
    font-size 30px
  .users__add-user, .register
    #friend-username, #register-username
      font-size 20px